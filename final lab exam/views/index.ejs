<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Paintings</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      text-align: center;
    }
    h1 {
      color: #333;
    }
    form {
      max-width: 400px;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 5px;
      background-color: #f9f9f9;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }
    th {
      background-color: #4CAF50;
      color: white;
    }
    button {
      background-color: #008CBA;
      color: white;
      border: none;
      padding: 8px 12px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 14px;
      margin: 4px 2px;
      cursor: pointer;
      border-radius: 4px;
    }
    .action-buttons {
      text-align: right;
    }
    .delete-button {
      background-color: #FF0000;
    }
  </style>
</head>
<body>
  <h1>Paintings</h1>

  <form action="/paintings" method="post">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" required>
    <br>
    <label for="category">Category:</label>
    <input type="text" id="category" name="category" required>
    <br>
    <label for="price">Price:</label>
    <input type="number" id="price" name="price" required>
    <br>
    <button type="submit">Add Painting</button>
  </form>

  <hr>


  <table border="1">
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Price</th>
      <th>Action</th>
    </tr>

    <% paintings.forEach(painting => { %>
      <tr>
        <td><%= painting.name %></td>
        <td><%= painting.category %></td>
        <td>$<%= painting.price %></td>
        <td class="action-buttons">
          <form action="/paintings/<%= painting.id %>/edit" method="get" style="display:inline;">
            <button type="submit">Edit</button>
          </form>
          <form action="/paintings/<%= painting.id %>/delete" method="post" style="display:inline;">
            <button class="delete-button" type="submit">Delete</button>
          </form>
        </td>
      </tr>
    <% }); %>
  </table>
</body>
</html>
